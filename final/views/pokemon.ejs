<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('templates/head_common'); -%>
    <link rel="stylesheet" href="/css/normalize.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/search.css" />
    <link rel="stylesheet" href="/css/pokemonPage.css" />

    <title>PokePrime</title>
</head>
<body>
    <%- include('templates/navbar'); -%>

    <div class="banner" id="banner-left"></div>

    <div class="main-container">
        <div class="main wrapper clearfix" id="contentContainer">
            <header id="pokemonHeader">
                <!-- Image of Pokemon !-->
                <img
                        src="#"
                        alt="Front View of Pokemon"
                        id="pokemonMainImage"
                        width="300"
                        height="300"
                />

                <!-- Pokemon Name and Types !-->
                <div id="pokemonTitleAndTypesContainer">
                    <h1 id="pokemonNameTitle"></h1>
                    <!-- Types loaded through JavaScript !-->
                    <div>
                        <button id="pokemonRandomBtn"><i class="fa fa-random"></i></button>
                        <% if (typeof(user) !== "undefined" && user !== null) { %>
                            <select name="selectRosterSlot" id="selectRosterSlot">
                                <option value="1">Slot 1</option>
                                <option value="2">Slot 2</option>
                                <option value="3">Slot 3</option>
                                <option value="4">Slot 4</option>
                                <option value="5">Slot 5</option>
                            </select>

                            <button id="pokemonAddToListBtn">Add to Roster</button>
                        <% } %>
                    </div>
                    
                    <p id="pokemonDescription"></p>
                </div>
            </header>
            <section id="pokemonMain">
                <!-- Base Stats !-->
                <div id="baseStats">
                    <h2 id="baseStatsTitle">Base Stats</h2>
                    <p id="hpBaseStat">HP</p>
                    <p id="attackBaseStat">Attack</p>
                    <p id="defenceBaseStat">Defence</p>
                    <p id="saBaseStat">Special Attack</p>
                    <p id="sdBaseStat">Special Defence</p>
                    <p id="speedBaseStat">Speed</p>
                </div>

                <!-- Tab Layout !-->
                <div id="tabLayout">
                    <div id="tabLayoutTabBtns">
                        <button
                                class="tabLayoutTabBtnsBtn tabLayoutTabBtnsBtnCurrent"
                                id="tabLayoutMovesBtn"
                        >
                            Moves
                        </button>
                        <button class="tabLayoutTabBtnsBtn" id="tabLayoutEncountersBtn">
                            Encounters
                        </button>
                        <button class="tabLayoutTabBtnsBtn" id="tabLayoutGamesBtn">
                            Games
                        </button>
                    </div>
                    <div id="tabLayoutContent">
                        <!-- Tab Content loaded through JavaScript !-->
                    </div>
                </div>

                <!-- Evolutions !-->
                <div>
                    <h2 id="pokemonEvolutionTitle">Evolution</h2>
                    <div id="evolutionContent"></div>
                </div>
            </section>
        </div>
        <!-- #main -->
    </div>
    <!-- #main-container -->

    <div class="banner" id="banner-right"></div>
    
    <%- include('templates/footer'); -%>

    <!-- JavaScript scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>
        window.jQuery ||
        document.write(
            '<script src="js/vendor/jquery-1.11.2.min.js"><\/script>'
        );
    </script>
    <script src="js/pokemon.js"></script>
    <script src="js/searchBar.js"></script>
    <script src="js/main.js"></script>
    <script src="js/pokemonPage.js"></script>
</body>
</html>